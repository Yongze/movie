extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th Name
						th Entry time
						th Check
						th Update
						th Delete
				tbody
				each item in users
					tr(class="item-id-#{item._id}")
						td #{item.name}
						td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
						td: a(target="_blank", href="") Check
						td: a(target="_blank", href="") Update
						td 
							button.btn.btn-danger.del(type="button", data-id="#{item._id}") Delete
